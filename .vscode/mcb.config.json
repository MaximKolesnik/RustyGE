{
	"version": "1.0.0",
	"configTypes": [
		{
			"name": "Test",
			"options": [
				{
					"name": "default",
					"flags": ""
				}
			]
		}
	],
	"build": {
		"command": "./scripts/build_crate_path.sh source"
	},
	"buildCurrentFile": {
        "command": "./scripts/run_cargo_at.sh build $mcb{currentFile}$",
		"extensions": ".rs"
	},
	"debug": {
        "name": "MCB terminal",
        "type": "lldb",
        "request": "launch",
        "program": "${workspaceFolder}/.build/source/debug/launcher",
        "stopAtEntry": false,
        "cwd": "${workspaceFolder}/.build/source/debug/",
        "setupCommands": [
            {
                "description": "Enable pretty-printing for gdb",
                "text": "-enable-pretty-printing",
                "ignoreFailures": false
            }
        ],
        "env": {
            "LD_LIBRARY_PATH": "/home/lagobas/.rustup/toolchains/nightly-x86_64-unknown-linux-gnu/lib/:${workspaceFolder}/.build/source/debug/"
        }
    },
	"run": {
		"command": "./scripts/run_engine.sh"
	},
	"clean": {
		"command": "./scripts/run_cargo_at.sh clean source"
	}
}