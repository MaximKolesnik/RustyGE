{
	"version": "1.0.0",
	"configTypes": [
		{
			"name": "Test",
			"options": [
				{
					"name": "default",
					"flags": ""
				}
			]
		}
	],
	"build": {
		"command": "./scripts/build_crate_path.sh engine && ./scripts/build_crate_path.sh plugins"
	},
	"buildCurrentFile": {
        "command": "./scripts/run_cargo_at.sh build $mcb{currentFile}$",
		"extensions": ".rs"
	},
	"debug": {
        "name": "MCB terminal",
        "type": "lldb",
        "request": "launch",
        "program": "${workspaceFolder}/.build/engine/debug/launcher",
        "stopAtEntry": false,
        "cwd": "${workspaceFolder}",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": false
                }
            ]
    },
	"run": {
		"command": "./scripts/run_engine.sh"
	},
	"clean": {
		"command": "./scripts/run_cargo_at.sh clean engine && ./scripts/run_cargo_at.sh clean plugins"
	}
}